<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="business.Book_contents" table="book_contents">
        <id name="book_id" type="java.lang.Long">
            <column name="book_id" />
            <generator class="identity" />
        </id>
        <property name="book_cover" type="byte[]">
            <column name="book_cover" not-null="false" />
        </property>
    </class>
</hibernate-mapping>