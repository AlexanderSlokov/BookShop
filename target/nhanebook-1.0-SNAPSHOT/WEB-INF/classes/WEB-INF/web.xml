<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>emailList</servlet-name>
        <servlet-class>exercise.nhanebook.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emailList</servlet-name>
        <url-pattern>/emailList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SurveyExercise</servlet-name>
        <servlet-class>exercise.nhanebook.SurveyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyExercise</servlet-name>
        <url-pattern>/survey</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadServletExercise</servlet-name>
        <servlet-class>exercise.nhanebook.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServletExercise</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <!--
    <servlet>
        <servlet-name>DownloadServletExercise2</servlet-name>
        <servlet-class>exercise.nhanebook.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServletExercise2</servlet-name>
        <url-pattern>/download2</url-pattern>
    </servlet-mapping>
    -->
    <session-config>
        <session-timeout>-1</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>DownloadFileSupportServlet</servlet-name>
        <servlet-class>data.nhanebook.DownloadFileSupportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadFileSupportServlet</servlet-name>
        <url-pattern>/DownloadFileSupportServlet</url-pattern>
    </servlet-mapping>
        <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
    <context-param>
        <param-name>custServEmail</param-name>
        <param-value>custserv@murach.com</param-value>
    </context-param>
    <servlet>
        <servlet-name>EmailListServletEL</servlet-name>
        <servlet-class>exercise.nhanebook.EmailListServletEL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailListServletEL</servlet-name>
        <url-pattern>/emailListEL</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>exercise.nhanebook.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>exercise.nhanebook.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/loadProducts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SqlGateway</servlet-name>
        <servlet-class>exercise.nhanebook.SqlGatewayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SqlGateway</servlet-name>
        <url-pattern>/sqlGateway</url-pattern>
    </servlet-mapping>
</web-app>
